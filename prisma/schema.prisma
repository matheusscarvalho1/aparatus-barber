generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Barbershop {
  id          String              @id @default(uuid())
  name        String
  address     String
  description String
  imageUrl    String // Coloco a url da Imagem num S3 da vida
  phones      String[]
  services    BarbershopService[]
}

model BarbershopService {
  id           String     @id @default(uuid())
  name         String
  description  String
  imageUrl     String
  barbershopId String
  barbershop   Barbershop @relation(fields: [barbershopId], references: [id]) // Chave estrangeira para definir relação entre barbershopId com o Id da tabela Barbershop.
  priceInCents Int // Não salvar em 'decimals' devido ao erro do node não calcular de forma precisa, a nao ser bitcoins, para fazer calculos de numeros inteiros tem que ser INT.
}

model Booking {
  id           String    @id @default(uuid())
  serviceId    String
  barbershopId String
  date         DateTime  @db.Timestamptz // UTC - Sem fuso horário - Melhor forma de salvar uma data no banco é sempre em UTC. - timestamptz salva em utc o horário no banco.
  cancelled    Boolean?  @default(false)
  cancelledAt  DateTime? @db.Timestamptz
}

